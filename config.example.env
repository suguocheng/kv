# KV 系统配置示例文件
# 使用方法：复制为 config.env 并按需修改

# ===== 服务器基础配置 =====
SERVER_CLIENT_PORT_BASE=9000     # 客户端监听端口起始值（节点0为此值，节点i为此值+i）
SERVER_PEER_PORT_BASE=8000       # Raft对等端口起始值（节点0为此值，节点i为此值+i）
SERVER_NODE_COUNT=3              # 启动的节点数量
SERVER_HOST=localhost            # 服务器主机名或IP（用于拼接地址）

# ===== WAL/快照配置 =====
SERVER_MAX_WAL_ENTRIES=1000      # 单个WAL文件允许的最大条目数（达到后轮转）
SERVER_SNAPSHOT_INTERVAL=1000    # 每应用多少条日志生成一次快照

# ===== 数据路径配置 =====
SERVER_DATA_BASE_PATH=data       # 所有节点的数据根目录
SERVER_WAL_SUBDIR=wal            # 节点下WAL子目录名
SERVER_RAFT_STATE_FILE=raft-state.pb   # Raft状态文件名
SERVER_SNAPSHOT_FILE=snapshot.pb       # 快照文件名

# ===== 客户端配置 =====
CLIENT_SERVERS=127.0.0.1:9000,127.0.0.1:9001,127.0.0.1:9002   # 客户端可连接的服务器地址列表（逗号分隔）
CLIENT_HISTORY_DIR=history       # 客户端历史记录文件目录
CLIENT_HISTORY_FILE=kvcli_history # 客户端历史记录文件名

 